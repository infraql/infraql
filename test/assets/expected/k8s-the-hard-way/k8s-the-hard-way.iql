--
-- create VPC 
--
use google;

INSERT /*+ AWAIT  */ INTO compute.networks
(
 project,
 data__name,
 data__autoCreateSubnetworks,
 data__routingConfig
) 
SELECT
'infraql-demo',
'kubernetes-the-hard-way-vpc',
false,
'{"routingMode":"REGIONAL"}';

--
-- create subnetwork
--
INSERT /*+ AWAIT  */ INTO compute.subnetworks
(
 project,
 region,
 data__name,
 data__network,
 data__ipCidrRange,
 data__privateIpGoogleAccess
) 
SELECT
'infraql-demo',
'australia-southeast1',
'kubernetes-the-hard-way-subnet',
'https://compute.googleapis.com/compute/v1/projects/infraql-demo/global/networks/kubernetes-the-hard-way-vpc',
'10.240.0.0/24',
 false;

--
-- create public IP address
--
INSERT /*+ AWAIT  */ INTO compute.addresses
(
 project,
 region,
 data__name
) 
SELECT
'infraql-demo',
'australia-southeast1',
'kubernetes-the-hard-way-ip';
